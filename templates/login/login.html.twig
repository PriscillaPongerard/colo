{% extends 'base.html.twig' %}
{% block body %}
  <section class="dark-wrapper opaqued parallax"
    data-parallax="scroll"
    data-image-src="{{ asset('img/banniere.png') }}"
    data-speed="0.7">
    <div class="section-inner pad-top-200">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 mt30 wow text-center">
            <h2 class="section-heading">
           {% trans %}  Connection {% endtrans %}
            </h2>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="welcome">
    <div class="section-inner-connexion">
      <form method="post">
        <div class="row">
          <div class="col-md-offset-2 col-md-4">
            <label for="username">{% trans %}Identifying :{% endtrans %}</label>
          </div>
          <div class="col-md-6">
            <input type="text"
              name="_username"
              id="username"
               />
          </div>
        </div>
        <div class="row">
          <div class="col-md-offset-2 col-md-4">
            <label for="password">{% trans %}Password :{% endtrans %}</label>
          </div>
          <div class="col-md-6">
            <input type="password"
              name="_password"
              id="password"
             />
          </div>
        </div>
        <div class="row-connexion">
          <button type="submit" class="btn btn-primary btn-lg">
            {% trans %}Connection{% endtrans %}
          </button>
        </div>
      </form>
    </div>
  </section>
{% endblock %}
